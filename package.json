{
  "name": "s3coredb",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.732.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "aws-sdk-client-mock": "^3.0.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "browser": {
    "./dist/s3Client.js": "./dist/s3Client.browser.js"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "S3CoreDB Test Report",
          "outputPath": "./test-report.html",
          "includeFailureMsg": true,
          "includeConsoleLog": true,
          "sort": "status"
        }
      ]
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageReporters": [
      "text",
      "html"
    ]
  }
}
